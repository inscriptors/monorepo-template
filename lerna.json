{
  "npmClient": "yarn",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "version": "0.0.0",
  "packages": [
    ".",
    "apps/*",
    "libs/*"
